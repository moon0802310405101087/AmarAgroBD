<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.moon.farmingbd">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/iconapp_foreground"
        android:label="@string/app_name"
        android:theme="@style/Theme.Material3.DayNight">
        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".ConfirmedOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".OwnerDeliveredProductsActivity"
            android:exported="false" />
        <activity
            android:name=".AboutActivity"
            android:exported="false" />
        <activity
            android:name=".NewOrdersAdapter"
            android:exported="false" />


        <activity
            android:name=".OrderHistoryAdapter"
            android:exported="false" />

        <activity
            android:name=".SalesReportsActivity"
            android:exported="false" />
        <activity
            android:name=".DeliveredOrdersAdapter"
            android:exported="false" />
        <activity
            android:name=".AvailableProductsAdapter"
            android:exported="false" />

        <activity
            android:name=".DeliveryOrdersActivity"
            android:exported="false" />
        <activity
            android:name=".OrderAdapter"
            android:exported="false" />
        <activity
            android:name=".OrderActivity"
            android:exported="false" /> <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Owner Dashboard Activity -->
        <activity
            android:name=".DashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" /> <!-- Manage Products Activities -->

        <activity
            android:name=".AddProductActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" />
        <activity
            android:name=".ShowProductsActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" />

        <activity
            android:name=".ViewOrdersActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <activity
            android:name=".SignInActivity"
            android:exported="true"
            android:label="Sign In"
            android:theme="@style/Theme.Material3.DayNight" />
        <activity
            android:name=".SignUpActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity> <!-- Customer & Delivery Dashboards -->
        <activity
            android:name=".CustomerDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" />
        <activity
            android:name=".DeliveryDashboardActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" /> <!-- Customer Side Activities -->
        <activity
            android:name=".ViewProductsActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" />

        <activity
            android:name=".OrderHistoryActivity"
            android:exported="true"
            android:theme="@style/Theme.Material3.DayNight" />
    </application>

</manifest>