<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Order Info Section -->
    <TextView
        android:id="@+id/productNameText"
        android:text="Product: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/quantityText"
        android:text="Quantity: "
        android:textSize="16sp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/totalPriceText"
        android:text="Total Price: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Location Info -->
    <TextView
        android:id="@+id/divisionText"
        android:text="Division: "
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/districtText"
        android:text="District: "
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/cityText"
        android:text="City: "
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/addressText"
        android:text="Address: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Contact -->
    <TextView
        android:id="@+id/phoneText"
        android:text="Phone: "
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Status Info -->
    <TextView
        android:id="@+id/statusText"
        android:text="Status: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/orderTimeText"
        android:text="Ordered at: "
        android:textColor="#555"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/deliveryTimeText"
        android:text="Delivered at: "
        android:textColor="#4CAF50"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Deliveryman Email -->
    <EditText
        android:id="@+id/deliveryManEmailInput"
        android:hint="Deliveryman Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#CCCCCC" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/assignDeliveryManBtn"
            android:text="Assign DeliveryMan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/markDeliveredBtn"
            android:text="Mark as Delivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
