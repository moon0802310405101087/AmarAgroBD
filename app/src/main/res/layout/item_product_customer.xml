<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder"
            android:background="@drawable/rounded_image_bg" />

        <!-- Right Side Product Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/productNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E7D32" />

            <TextView
                android:id="@+id/productPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: 0.00 per unit"
                android:textSize="14sp"
                android:textColor="#4CAF50" />

            <TextView
                android:id="@+id/productQuantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available: 0 kg/piece"
                android:textSize="14sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/productDescriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: Fresh and organic."
                android:textSize="13sp"
                android:textColor="#777777"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/productCategoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category: Vegetables"
                android:textSize="13sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/productLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location: Dhaka"
                android:textSize="13sp"
                android:textColor="#555555" />

            <TextView
                android:id="@+id/productOwnerTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Owner ID: abc123"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <!-- Order Now Button -->
            <Button
                android:id="@+id/orderNowBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="#388E3C"
                android:text="Order Now"
                android:textColor="#FFFFFF"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
